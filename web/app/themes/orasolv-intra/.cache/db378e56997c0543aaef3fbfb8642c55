<?php
	global $post;
	$post = get_post( $module->ID );
	setup_postdata( $post );
?>
<div class="row">

	<div class="col-md-12">

		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><?php echo  get_the_title() ; ?></h3>
			</div>
			<div class="panel-body">

				<div id="bars-<?php echo  $module->ID ; ?>" style="height: 250px;"></div>

				<?php echo  get_the_content() ; ?>
			</div>
        </div>
		
	</div>

</div>

<script>

	jQuery( document ).ready(function($) {

		new Morris.Bar({
		  element: 'bars-<?php echo  $module->ID ; ?>',
		  data: [
		  	<?php foreach( papi_get_field('data_yabcd') as $key => $data ): ?>
		  		<?php if( $key ): ?> 
		  		,
		  		<?php endif; ?>
			    { y: '<?php echo  $data['y'] ; ?>', a: <?php echo  $data['a'] ; ?>, b: <?php echo  $data['b'] ; ?>,c: <?php echo  $data['c'] ; ?>,d: <?php echo  $data['d'] ; ?>  }
		  	<?php endforeach; ?>
		  ],
		  xkey: 'y',
		  ykeys: ['a', 'b', 'c', 'd' ],
		  labels: [ '<?php echo  papi_get_field('a_name') ; ?>','<?php echo  papi_get_field('b_name') ; ?>','<?php echo  papi_get_field('c_name') ; ?>','<?php echo  papi_get_field('d_name') ; ?>' ]
		});

	});

</script>

<?php

wp_reset_postdata( $post );
