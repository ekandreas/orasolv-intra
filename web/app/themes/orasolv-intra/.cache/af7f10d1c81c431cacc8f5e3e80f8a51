<?php // /var/www/intra/web/app/themes/orasolv-intra/page.php ?>

<?php \Laravel\Section::start('main'); ?>

	<?php while( have_posts() ): ?>
		<?php the_post() ?>
		<div class="row">
			<div class="col-md-12">
				<div class="jumbotron">
					<?php if( has_post_thumbnail() ): ?>
						<div class="jumbotron-photo">
						    <?php echo  the_post_thumbnail() ; ?>
						</div>
					<?php endif; ?>
				  <div class="jumbotron-contents">
				  	<?php if( !is_front_page() ): ?>
				  		<h1><?php echo  the_title() ; ?></h1>
				  	<?php endif; ?>
				  	<?php echo  the_content() ; ?>
				  </div>
				</div>
			</div>
		</div>
	<?php endwhile; ?>
        
<?php \Laravel\Section::stop(); ?>

<?php \Laravel\Section::start('sidebar'); ?>
	<?php echo view( 'views.layouts.sidebar' )->with(get_defined_vars())->render(); ?>
<?php \Laravel\Section::stop(); ?>
<?php echo view('views.layouts.master')->with(get_defined_vars())->render(); ?>