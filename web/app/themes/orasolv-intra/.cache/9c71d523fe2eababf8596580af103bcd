<?php
	global $post;
	$post = get_post( $module->ID );
	setup_postdata( $post );
?>
<div class="thumbnail">
	<?php if( has_post_thumbnail() ): ?>
		    <?php echo  the_post_thumbnail(['class'=>'img-rounded']) ; ?>
	<?php endif; ?>
	<div class="caption text-center">
		<h3><?php echo  the_title() ; ?></h3>
		<p><?php echo  the_content() ; ?></p>
		<p>
			<a href="<?php echo  papi_get_field('link_url') ; ?>" class="btn btn-warning" role="button"><?php echo  papi_get_field('link_title') ; ?></a>
		</p>
	</div>
</div>

<?php

wp_reset_postdata( $post );