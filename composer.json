{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "A modern WordPress stack",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "roots", "wordpress", "stack", "composer", "vagrant", "wp"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.5",
    "composer/installers": "*",
    "vlucas/phpdotenv": "^2.0.1",
    "johnpbloch/wordpress": "*",
    "wp-papi/papi": "*",
    "johnbillion/query-monitor": "*",
    "wpackagist-plugin/groups": "*",
    "mandrill/mandrill": "*",
    "wpackagist-plugin/redirection": "*",
    "wpackagist-plugin/disable-emojis":"*",
    "roots/soil": "*",
    "johnbillion/extended-cpts":"*",
    "wpackagist-plugin/resize-image-after-upload":"*",
    "ekandreas/bladerunner":"*",
    "wpackagist-plugin/menu-image": "*",
    "wpackagist-plugin/enhanced-media-library": "*",
    "wpackagist-plugin/elasticpress": "*",
    "wpackagist-plugin/sendgrid-email-delivery-simplified": "*",
    "wpackagist-plugin/mce-table-buttons": "*",
    "wpackagist-plugin/bootstrap-3-shortcodes": "*",
    "wpackagist-plugin/bootstrap-shortcodes": "*",
    "wpackagist-plugin/megamenu": "*"
  },
  "require-dev": {
    "deployer/deployer": "*",
    "ekandreas/dipwpe": "dev-master",
    "filp/whoops": "dev-master",
    "ekandreas/docker-bedrock": "*"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "autoload": {
        "files": ["vendor/johnbillion/extended-cpts/extended-cpts.php"]
  }
}
